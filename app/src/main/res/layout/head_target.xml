<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background3"
    android:paddingLeft="18dp"
    android:paddingTop="10dp"
    android:paddingRight="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_et"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search"
            android:drawableRight="@mipmap/icon_search"
            android:gravity="center_vertical"
            android:hint="请输入关键字"
            android:paddingLeft="20dp"
            android:textColor="@color/text10"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColorHint="@color/text10"
            android:textSize="14sp" />

        <Button
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ripple_search_bt"
            android:text="高级搜索"
            android:textColor="@color/text0"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>